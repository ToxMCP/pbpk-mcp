{
  "name": "MCP Bridge",
  "build": {
    "context": "..",
    "dockerfile": "../Dockerfile",
    "args": {
      "PYTHON_VERSION": "3.11-slim"
    }
  },
  "runArgs": ["--env-file", ".env.example"],
  "settings": {
    "python.defaultInterpreterPath": "/usr/local/bin/python"
  },
  "postCreateCommand": "make install",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },
  "remoteUser": "mcp"
}
